@model Lab3DataModel

@{
	ViewData["Title"] = "Task 3";
}

<h1>@ViewData["Title"]</h1>
<text> &nbsp; &nbsp; &nbsp;</text>
<h2>Print a single number - the number of parts into which the plane is divided</h2>

